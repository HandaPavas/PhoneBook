<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_function"
    tools:context=".FunctionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username"
        android:id="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/updatebutton"
        android:layout_alignEnd="@+id/updatebutton" />
    <TextView
        android:text="MY PHONEBOOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/heading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE NEW CONTACT"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/createbutton"
        android:layout_below="@id/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE EXISTING CONTACT"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/updatebutton"
        android:layout_below="@+id/createbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE EXISTING CONTACT"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/deletebutton"
        android:layout_below="@+id/updatebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW CONTACTS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:id="@+id/viewbutton"
        android:layout_below="@+id/deletebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>